<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               label="WAPIml">
            <command
                  commandId="edu.uoc.som.wapiml.ui.handlers.ConvertToClassDiagram"
                  label="Generate a class diagram"
                  style="push"
                  tooltip="Generate a class diagram from an OpenAPI definition">
               <visibleWhen
                     checkEnabled="false">
                  <iterate>
                     <and>
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="json">
                        </test>
                     </and>
                  </iterate>
               </visibleWhen>
            </command>
            <command
                  commandId="edu.uoc.som.wapiml.ui.handlers.ConvertToJson"
                  label="Generate an OpenAPI definition"
                  style="push"
                  tooltip="Generate an OpenAPI definition from an annotated UML model">
               <visibleWhen
                     checkEnabled="false">
                  <iterate>
                     <and>
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="uml">
                        </test>
                     </and>
                  </iterate>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="edu.uoc.som.wapiml.ui.handlers.ConvertToClassDiagram"
            id="edu.uoc.som.wapiml.ui.handlers.ConvertToClassDiagram"
            name="Generate a class diagram">
      </command>
      <command
            defaultHandler="edu.uoc.som.wapiml.ui.handlers.ConvertToJson"
            id="edu.uoc.som.wapiml.ui.handlers.ConvertToJson"
            name="Generate an OpenAPI definition">
      </command>
   </extension>

</plugin>
